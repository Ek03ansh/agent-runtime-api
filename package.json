{
  "name": "testing-agent",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "setup": "npm install -g opencode-ai && npm install",
    "setup:bun": "bun install -g opencode-ai && npm install",
    "setup:pnpm": "pnpm install -g opencode-ai && npm install",
    "setup:yarn": "yarn global add opencode-ai && npm install",
    "verify": "opencode --version",
    "check": "python setup_check.py",
    "dev": "python main.py",
    "test": "python test_agent_api.py test",
    "test:create": "python test_agent_api.py create complete"
  },
  "keywords": ["opencode", "playwright", "testing", "automation", "api"],
  "author": "",
  "license": "ISC",
  "description": "Agent Runtime API for OpenCode with Playwright MCP integration",
  "devDependencies": {
    "@playwright/test": "1.56.0-alpha-2025-09-02",
    "@playwright/mcp": "next",
    "@types/node": "^24.3.0"
  }
}
